<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Todo_list.MainList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create Todo list"
                    android:textColor="@color/primary"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Best platform for creating to-do lists"
                    android:textColor="@color/secondary"
                    android:textSize="14dp"
                    android:gravity="center"


                    />
            </LinearLayout>

<!--            <ImageView-->
<!--                android:id="@+id/imageView2"-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="20dp"-->
<!--                android:layout_weight="1"-->
<!--                android:layout_gravity="center"-->
<!--                app:srcCompat="@drawable/ic_setting" />-->
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/image_open_task_app" />

        <Button
            android:id="@+id/btnOpenApptodo"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="@color/ColorText"
            app:cornerRadius="16dp"
            android:text="Open Todoapp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>