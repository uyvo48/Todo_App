<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Task 1 -->
    <TextView
        android:id="@+id/task1_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task 1"
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/task1_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Masyla Website Project"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/task1_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/task1_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08.30 PM"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/task1_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/task1_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon, 19 Jul 2022"
        android:textSize="16sp"
        android:textColor="#666666"
        app:layout_constraintBaseline_toBaselineOf="@id/task1_time"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Divider -->
    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#EEEEEE"
        app:layout_constraintTop_toBottomOf="@id/task1_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Task 2 -->
    <TextView
        android:id="@+id/task2_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task 2"
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/task2_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Medical Design System"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/task2_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/task2_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08.30 PM"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/task2_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/task2_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon, 19 Jul 2022"
        android:textSize="16sp"
        android:textColor="#666666"
        app:layout_constraintBaseline_toBaselineOf="@id/task2_time"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>